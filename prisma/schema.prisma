generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  title         String
  description   String?
  address       String
  zip_code      String
  whatsapp      String
  accountable   String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("organizations")
}

model Pet {
  id           String    @id @default(uuid())
  name         String
  description  String?
  birthday     DateTime?
  size         String?
  energy       String?
  independence String?
  enviroment   String?
  city         String
  photos       Json?
  requirements Json?
  created_at   DateTime  @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
